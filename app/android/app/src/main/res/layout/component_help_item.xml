<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/layout_help_item"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:id="@+id/title_help"
                />
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:id="@+id/btn_more"
                android:src="@drawable/ic_baseline_keyboard_arrow_down"
                android:background="?android:attr/selectableItemBackground"
                />
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_help_item"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_item_1"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_text1"
                    android:text="날씨App 에서는 현재 날씨와 주간 날씨 정보를 제공합니다."
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 날씨"
                    android:id="@+id/item_title1"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/item_text1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:id="@+id/item_image1"
                    app:layout_constraintTop_toBottomOf="@id/item_title1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주간 날씨"
                    android:id="@+id/item_title2"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/item_image1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:id="@+id/item_image2"
                    app:layout_constraintTop_toBottomOf="@id/item_title2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_item_2"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_content"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>