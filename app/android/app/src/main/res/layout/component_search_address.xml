<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.jun.weather.viewmodel.WeatherPointViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rect_radius_background"
            android:id="@+id/layout_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.5"
            >
            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/auto_text_address"
                android:completionThreshold="2"
                android:hint="주소를 입력하세요"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:imeOptions="flagNoExtractUi"
                android:dropDownAnchor="@id/auto_text_address"
                android:text='@{viewModel.selectedPoint.toString() ?? ""}'
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_gps"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btn_gps"
                android:src="@drawable/ic_baseline_gps_black"
                android:scaleType="center"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/layout_recent"
            android:layout_marginTop="8dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@id/layout_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/recent_point1"
                android:background="@drawable/rect_radius_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_text1"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:text='@{viewModel.pointArr[0].toString() ?? ""}'
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/recent_point2"
                android:background="@drawable/rect_radius_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_text2"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:text='@{viewModel.pointArr[1].toString() ?? ""}'
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/recent_point3"
                android:background="@drawable/rect_radius_background"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_text3"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:text='@{viewModel.pointArr[2].toString() ?? ""}'
                    />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
